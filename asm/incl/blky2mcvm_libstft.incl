_stft_trw_loop:
ldw		r1,[r3]
addi	r3,2
// spi 16 bits transfer
lsli	r1,_stft_spi_shift$(z)
rept	16
// spi bit $(reptr)
_stft_mosi_o
_stft_sck_1
_stft_sck_0
endr
// end of loop
