ldvar	r0,_stft_pix_ptr
ld$(z)	r0,[r0]
add		r7,r0
add		r7,r0
stw		[r7],r1
addi	r0,1
ldvar	r7,_stft_pix_ptr
st$(z)	[r7],r0
cmpi	r0,_stft_pix_max
