# user macros
macro	_stft_ss_0
// ss=0
ldbiu	r0,_stft_ss
stw		[r5],r0
endm

macro	_stft_ss_1
// ss=1
ldbiu	r0,_stft_ss
stw		[r7],r0
endm

macro	_stft_sck_0
// sck=0
ldbiu	r0,_stft_sck
stw		[r5],r0
endm

macro	_stft_sck_1
// sck=1
ldbiu	r0,_stft_sck
stw		[r7],r0
endm

macro	_stft_mosi_o
// mosi
ldbiu	r0,_stft_mosi
lsli	r1,1
bcs		pcnt+4
stw		[r5],r0							// clear
bra		pcnt+2
stw		[r7],r0							// set
endm

macro	_stft_dcx_0
// d/cx=0
ldbiu	r0,_stft_dcx
stw		[r5],r0
endm

macro	_stft_dcx_1
// d/cx=1
ldbiu	r0,_stft_dcx
stw		[r7],r0
endm

macro	_stft_res_0
// reset=0
ldwi	r5,stftpclr
ldbiu	r0,_stft_res
stw		[r5],r0
endm

macro	_stft_res_1
// reset=1
ldwi	r7,stftpset
ldbiu	r0,_stft_res
stw		[r7],r0
endm
